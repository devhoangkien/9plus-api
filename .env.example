# ==============================================
# ANINEPLUS API - Development Environment
# ==============================================

NODE_ENV=development

# PostgreSQL Database
DB_HOST=core-database
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=anineplus_core
DB_SCHEMA=public
DB_SYNC=true

# Redis Cache
REDIS_HOST=cache-service
REDIS_PORT=6379

# JWT Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-for-development
JWT_ACCESSTOKEN_SECRET=VtWeuJo5cPrH1gzvLX0HwPkcbVVeMkV0/a2JFeP3hGE=
JWT_REFRESHTOKEN_SECRET=tPQz6vb7nJDilma85OQExilvgZX+QyEf1CL95DmfBLA=
JWT_ISSUER=anineplus-api
JWT_AUDIENCE=public
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# Service URLs (Docker Internal Network)
CORE_SERVICE_URL=http://core:3000
GATEWAY_SERVICE_URL=http://gateway:3001
SEARCHER_SERVICE_URL=http://searcher:3002
LOGGER_SERVICE_URL=http://logger:3003
PAYMENT_SERVICE_URL=http://payment:3100

# External URLs (Host Access)
CORE_SERVICE_EXTERNAL_URL=http://localhost:3000
GATEWAY_SERVICE_EXTERNAL_URL=http://localhost:3001
SEARCHER_SERVICE_EXTERNAL_URL=http://localhost:3002
LOGGER_SERVICE_EXTERNAL_URL=http://localhost:3003
PAYMENT_SERVICE_EXTERNAL_URL=http://localhost:3100

# Kafka Message Broker
KAFKA_BROKERS=kafka:29092
KAFKA_EXTERNAL_BROKERS=localhost:9092
KAFKA_CLIENT_ID=anineplus-api
KAFKA_GROUP_ID=anineplus-consumers
KAFKA_AUTO_CREATE_TOPICS=true
KAFKA_NUM_PARTITIONS=3
KAFKA_REPLICATION_FACTOR=1

# Elasticsearch Search Engine
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_EXTERNAL_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=anineplus
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Kibana Dashboard
KIBANA_URL=http://kibana:5601
KIBANA_EXTERNAL_URL=http://localhost:5601

# Event-Driven Architecture
ENABLE_KAFKA_EVENTS=true
ENABLE_ELASTICSEARCH_LOGGING=true
ENABLE_EVENT_SOURCING=true
LOG_BUFFER_FLUSH_INTERVAL=5000
EVENT_RETRY_ATTEMPTS=3
EVENT_RETRY_DELAY=1000

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_DATE_FORMAT=YYYY-MM-DD HH:mm:ss
LOG_MAX_FILES=7
LOG_MAX_SIZE=20m

# Health Checks
HEALTH_CHECK_TIMEOUT=30s
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=60s

# Docker Compose
COMPOSE_PROJECT_NAME=anineplus-api
COMPOSE_FILE=docker-compose-dev.yaml
