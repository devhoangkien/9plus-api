{
  "name": "core",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "postinstall": "node ../../patches/kafkajs-bun-fix.js",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "dev": "bun --bun --watch src/main.ts",
    "dev:clean": "nest start --watch",
    "debug": "bun --inspect --bun src/main.ts",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:migrate": "npx prisma migrate dev --name",
    "seed": "bun run prisma/seeds/index.ts",
    "seed:roles": "bun run prisma/seeds/roles-permissions.seed.ts",
    "seed:orgs": "bun run prisma/seeds/organizations.seed.ts",
    "db:migrate-save": "prisma migrate dev",
    "db:migrate-up": "prisma migrate deploy",
    "db:clean": "prisma migrate reset",
    "db:init": "npm run db:migrate-save --name 'initial version' && npm run db:migrate-up && npm run seed",
    "prisma:generate": "prisma generate",
    "auth:generate-jwt-secret": "node -e \"console.log(require('crypto').randomBytes(32).toString('hex'))\"",
    "auth:hash-password": "node -e \"const bcrypt = require('bcrypt'); bcrypt.hash(process.argv[1], 12).then(console.log)\""
  },
  "dependencies": {
    "@anineplus/authorization": "link:@anineplus/authorization",
    "@anineplus/common": "link:@anineplus/common",
    "@apollo/federation": "^0.38.1",
    "@apollo/server": "^4.11.3",
    "@apollo/subgraph": "^2.10.0",
    "@fastify/csrf-protection": "^7.1.0",
    "@graphql-yoga/nestjs-federation": "^3.13.3",
    "@nestjs/apollo": "^13.0.4",
    "@nestjs/common": "^11.0.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.12",
    "@nestjs/graphql": "^13.0.4",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.12",
    "@prisma/client": "6.16.2",
    "@types/cookie-parser": "^1.4.8",
    "bcrypt": "^5.1.1",
    "better-auth": "1.3.26",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "csrf-csrf": "^3.1.0",
    "csurf": "^1.11.0",
    "dataloader": "2.2.3",
    "graphql": "^16.10.0",
    "graphql-request": "7.2.0",
    "graphql-scalars": "^1.24.2",
    "graphql-type-json": "^0.3.2",
    "ioredis": "^5.6.1",
    "kafkajs": "^2.2.4",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prisma-graphql-type-decimal": "^3.0.0",
    "prisma-nestjs-graphql": "^21.1.1",
    "qrcode": "^1.5.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "speakeasy": "^2.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.23.0",
    "@nestjs/cli": "^11.0.5",
    "@nestjs/schematics": "^11.0.2",
    "@nestjs/testing": "^11.0.12",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.11.13",
    "@types/bun": "^1.2.8",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.14",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "globals": "^15.15.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "prisma": "6.16.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
