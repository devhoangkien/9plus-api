# API Gateway Configuration
PORT=3000
GATEWAY_HOST=localhost
GATEWAY_PROTOCOL=http
JWT_SECRET=jwtsecret

# GraphQL Federation - Microservice URLs
CORE_SERVICE_URL=http://localhost:50051/graphql
PAYMENT_SERVICE_URL=http://localhost:50052/graphql

# Future services (uncomment when available)
# CONTENT_SERVICE_URL=http://localhost:50053/graphql
# NOTIFICATION_SERVICE_URL=http://localhost:50054/graphql

# Performance Configuration
CACHE_MAX_SIZE=1000
CACHE_TTL_MINUTES=5
REQUEST_TIMEOUT_MS=30000

# Development Environment
NODE_ENV=development

# GraphQL Code Generation
GENERATE_SCHEMA=true
SCHEMA_OUTPUT_PATH=./src/generated/federated-schema.graphql

# Logging Configuration
LOG_LEVEL=info
ENABLE_GRAPHQL_INTROSPECTION=true
ENABLE_GRAPHQL_PLAYGROUND=true

# Event-Driven Architecture
KAFKA_BROKERS=localhost:9092
ELASTICSEARCH_URL=http://localhost:9200

# Service Discovery URLs
SEARCHER_SERVICE_URL=http://localhost:3003
LOGGER_SERVICE_URL=http://localhost:3004

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090